<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/md_keylines">


        <ImageView
            android:id="@+id/list_avatar"
            android:layout_width="@dimen/avator_size"
            android:layout_height="@dimen/avator_size"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_star"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
                    android:id="@+id/list_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:textColor="@color/drk_blue"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="time"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="@dimen/list_body"
                    android:textAlignment="viewEnd"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/list_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/md_keylines"
            tools:text="lvl"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/article_subheading"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/md_keylines"
            android:layout_marginLeft="@dimen/lg_keylines"
            tools:text="usNm"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/article_subheading"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/list_avatar"
            android:layout_marginStart="19dp" />
</RelativeLayout>

